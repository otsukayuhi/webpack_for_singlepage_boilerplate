{
  "scripts": {
    "start": "npm run ejs:watch & npm run webpack:build & npm run webpack:serve",
    "webpack:serve": "webpack-dev-server",
    "webpack:build": "webpack",
    "webpack:watch": "webpack --watch",
    "ejs:build": "ejs-cli --base-dir src/_ejs '*.ejs' --out dist/ && npm run ejs:clean",
    "ejs:clean": "rimraf dist/**/_*.html",
    "ejs:watch": "nodemon -e ejs -x \"npm run ejs:build \""
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "picturefill": "^3.0.2",
    "sanitize.css": "^5.0.0",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.11",
    "ejs-cli": "^2.0.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "postcss-loader": "^2.1.5",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.4"
  },
  "private": true
}
